{
  "mcpServers": {
    "atlassian": {
      "command": "python",
      "args": ["-m", "atlassian_mcp.server"],
      "env": {
        "ATLASSIAN_DOMAIN": "your-domain.atlassian.net",
        "ATLASSIAN_EMAIL": "your-email@domain.com",
        "ATLASSIAN_CONFLUENCE_TOKEN": "your-confluence-token",
        "ATLASSIAN_JIRA_TOKEN": "your-jira-token"
      }
    }
  }
}
